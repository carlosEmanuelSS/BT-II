{
  "name": "my-chrome-extension",
  "version": "1.0.0",
  "type": "module",
  "description": "Chrome extension with E2E testing using Playwright",
  "scripts": {
    "setup": "node scripts/setup.mjs",
    "build": "node scripts/build-extension.mjs",
    "test:e2e": "playwright test --reporter=list,html",
    "test": "npm run build && npm run test:e2e",
    "test:local": "node scripts/test-local.mjs",
    "ci": "npm ci && npm run test"
  },
  "devDependencies": {
    "@playwright/test": "^1.46.0",
    "archiver": "^7.0.0"
  },
  "keywords": ["chrome-extension", "playwright", "e2e-testing"],
  "author": "Bootcamp Student",
  "license": "MIT"
}
